#!/usr/bin/env bash
# Display PID and name of processes containing "bash" without using pgrep or ps

for pid in /proc/[0-9]*; do
  cmd=$(cat "$pid/cmdline" 2>/dev/null | tr '\0' ' ')
  if [[ "$cmd" == *bash* ]]; then
    proc_name=$(basename "$cmd")
    echo "$(basename "$pid") $proc_name"
  fi
done

